---
import SlideTo from "../components/SlideTo.astro";

const { prev, id, next, classes, title } = Astro.props;
---

<section
  id={id}
  class={`min-h-screen lg:min-h-0 lg:py-10 py-24 flex flex-col justify-center relative ${classes || ""}`}
>
  {prev && <SlideTo target={prev} isTop={true} classes="lg:hidden" />}
  {
    title && (
      <h3 class="text-center mb-8 px-sm tracking-widest uppercase py-4 sticky top-0 backdrop-blur-sm dark:bg-stone-800/75 text-xl">
        {title}
      </h3>
    )
  }
  <div class="px-sm lg:px-lg">
    <slot />
  </div>
  {next && <SlideTo target={next} isTop={false} classes="lg:hidden" />}
</section>
