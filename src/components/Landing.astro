---
import Link from "../ui/Link.astro";
import Section from "../ui/Section.astro";
import ContactLinks from "./ContactLinks.astro";
---

<Section id="landing" next="#about" classes="!min-h-screen">
  <h1
    class="text-8xl dark:text-light text-dark uppercase whitespace-break-spaces -mx-1 flex flex-col"
  >
    <span>Raul</span>
    <span>Hinojosa</span>
  </h1>
  <h2
    class="text-2xl mt-1 dark:bg-light bg-dark text-light dark:text-dark py-2 pl-sm lg:pl-lg pr-6 -ml-sm lg:-ml-lg tracking-wide"
  >
    Full-Stack Web Developer
  </h2>
  <div class="space-y-3 mt-4">
    <p class="font-semibold">
      Building creative and functional solutions that solve real-world problems.
    </p>
    <ContactLinks />
    <Link href="/Curriculum.pdf" type="file" label="Checkout my curriculum"
      >Curriculum</Link
    >
  </div>
</Section>
